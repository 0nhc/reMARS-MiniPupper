<?xml version="1.0"?>
<launch>
  <arg name="dance_config"           default="demo"/>
  <arg name="hardware_connected"     default="true" />
  
  <include file="$(find mini_pupper)/launch/bringup.launch" >
    <arg name="hardware_connected"   value="$(arg hardware_connected)"/>
  </include>
  <node pkg="mini_pupper_dance" type="dance.py" respawn="false" name="lets_dance" output="screen">
    <param name="/dance_config" value="$(arg dance_config)"/>
  </node>
  <node pkg="mini_pupper_dance" type="pose_controller.py" name="pose_controller" output="screen"/>
  <!--node name="sound_play_node" pkg="sound_play" type="soundplay_node.py" output="screen"/-->
</launch>

